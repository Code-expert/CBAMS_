generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FARMER
  EXPERT
  ADMIN
  SELLER
}

enum OrderStatus {
  PENDING 
  ACCEPTED 
  CANCELLED 
  SHIPPED 
  DELIVERED 
}

enum RepeatType {
  NONE
  DAILY
  WEEKLY
}

enum SessionStatus {
  PENDING     
  CONFIRMED   
  CANCELLED   
  COMPLETED   
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role      Role       @default(FARMER)
  isVerified      Boolean    @default(false)
  otp             String? 
  otpExpiry       DateTime?
  resetToken      String?
  resetTokenExpiry DateTime?
  
  profile   Profile?
  shops     Shop[] 
  orders    Order[] 
  schedules Schedule[]
  tasks     Task[]              
  farmerSessions Session[] @relation("FarmerSessions")
  expertSessions Session[] @relation("ExpertSessions")
  marketListings MarketplaceListing[] @relation("FarmerListings")
  marketOrders   MarketOrder[]        @relation("BuyerMarketOrders")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Profile {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  phone     String?
  address   String?
  latitude  Float?
  longitude Float?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shop {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  owner       User         @relation(fields: [ownerId], references: [id])
  ownerId     Int
  fertilizers Fertilizer[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Fertilizer {
  id            Int       @id @default(autoincrement())
  name          String
  mrp           Float?                 
  sellingPrice  Float?                 
  stock         Int
  features      String?
  description   String?
  subImages     String[] @db.Text
  shop          Shop      @relation(fields: [shopId], references: [id])
  shopId        Int
  orders        Order[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Order {
  id           Int         @id @default(autoincrement())
  quantity     Int
  totalPrice   Float
  fertilizer   Fertilizer  @relation(fields: [fertilizerId], references: [id], onDelete: Cascade)
  fertilizerId Int
  buyer        User        @relation(fields: [buyerId], references: [id])
  buyerId      Int
  status       OrderStatus @default(PENDING)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Schedule {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  repeat      RepeatType @default(NONE)
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Session {
  id         Int           @id @default(autoincrement())
  farmer     User          @relation("FarmerSessions", fields: [farmerId], references: [id])
  farmerId   Int
  expert     User          @relation("ExpertSessions", fields: [expertId], references: [id])
  expertId   Int
  date       DateTime
  status     SessionStatus @default(PENDING)     
  videoRoomId String?      
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  time        String     // Format: "HH:MM" (e.g., "08:00", "14:30")
  dueDate     DateTime   @default(now())
  priority    Priority   @default(MEDIUM)
  status      TaskStatus @default(PENDING)
  icon        String     @default("Sprout")
  
  // SMS Reminder fields
  reminderEnabled Boolean  @default(true)
  reminderSent    Boolean  @default(false)
  
  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([userId, status])
  @@index([dueDate])
}
model MarketplaceListing {
  id          String   @id @default(uuid())
  farmerId    Int
  farmer      User     @relation("FarmerListings", fields: [farmerId], references: [id], onDelete: Cascade)
  
  productName String
  category    String   // Grain, Vegetable, Fruit, Pulses, Spices, Seeds
  quantity    Float
  unit        String   // kg, quintal, ton, piece, bunch
  pricePerUnit Float
  totalPrice  Float
  
  description String?
  imageUrl    String?
  location    String
  
  status      ListingStatus @default(ACTIVE)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  marketOrders MarketOrder[]
  
  @@map("marketplace_listings")
  @@index([farmerId, status])
  @@index([category, status])
}

model MarketOrder {
  id          String   @id @default(uuid())
  listingId   String
  listing     MarketplaceListing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  
  buyerId     Int
  buyer       User     @relation("BuyerMarketOrders", fields: [buyerId], references: [id], onDelete: Cascade)
  
  quantity    Float
  totalPrice  Float
  
  status      MarketOrderStatus @default(PENDING)
  
  deliveryAddress String?
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("market_orders")
  @@index([buyerId, status])
  @@index([listingId])
}

enum ListingStatus {
  ACTIVE
  SOLD
  EXPIRED
  CANCELLED
}

enum MarketOrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

